{
  "name": "ts-sql-notesapp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "copy:views": "ncp ./src/views/ ./dist/views",
    "copy:public": "ncp ./src/public/ ./dist/public",
    "watch:typescript": "nodemon -e ts --watch src --exec \"npm run build && npm start\"",
    "watch:hbs": "nodemon -e hbs,css --watch src --exec \"npm run copy:views && npm run copy:public\"",
    "dev": "concurrently \"npm run watch:typescript\" \"npm run watch:hbs\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.0.0",
    "connect-flash": "^0.1.1",
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "express-session": "^1.17.0",
    "moment": "^2.24.0",
    "morgan": "^1.9.1",
    "mysql": "^2.18.1",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "timeago.js": "^4.0.2",
    "typeorm": "^0.2.24"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/connect-flash": "0.0.35",
    "@types/express": "^4.17.3",
    "@types/express-handlebars": "^3.1.0",
    "@types/express-session": "^1.17.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "^13.9.1",
    "@types/passport": "^1.0.3",
    "@types/passport-local": "^1.0.33",
    "concurrently": "^5.1.0",
    "dotenv": "^8.2.0",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.2",
    "typescript": "^3.8.3"
  }
}
